<Page x:Class="user13.View.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:user13.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProductPage"
      Background="{StaticResource MainBG}">

    <Grid>
        <ScrollViewer>
            <StackPanel
            Orientation="Vertical"
            Width="300"
            Margin="20">

                <TextBlock 
                Text="Тип продукции" 
                FontSize="16" 
                Style="{StaticResource MainTextStyle}"/>
                <ComboBox
                x:Name="TypeProductComboBox"/>

                <TextBlock 
                Text="Название продукта" 
                FontSize="16" 
                Style="{StaticResource MainTextStyle}"/>
                <TextBox
                x:Name="NameProductTextBox"
                Height="30"/>

                <TextBlock 
                Text="Артикул" 
                FontSize="16" 
                Style="{StaticResource MainTextStyle}"/>
                <TextBox
                x:Name="ArticulTextBox"
                Height="30"/>

                <TextBlock 
                Text="Минимальная цена для партнера" 
                FontSize="16" 
                Style="{StaticResource MainTextStyle}"/>
                <TextBox
                x:Name="MinPriceTextBox"
                Height="30"/>

                <TextBlock 
                Text="Ширина" 
                FontSize="16" 
                Style="{StaticResource MainTextStyle}"/>
                <TextBox
                x:Name="WidthTextBox"
                Height="30"/>

                <Button
                x:Name="SaveButtonClick"
                Click="SaveButtonClick_Click"
                Margin="0 10 0 0"
                Content="Сохранить"
                Height="30"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
