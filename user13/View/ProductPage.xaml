<Page x:Class="user13.View.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:user13.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage"
      Background="{StaticResource MainBG}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> 
            <RowDefinition Height="Auto"/> 
        </Grid.RowDefinitions>
        
        <ListBox
            x:Name="ProductListBox"
            d:ItemsSource="{d:SampleData ItemCount=1}"
            Grid.Row="0"
            Padding="10"
            MouseDoubleClick="ProductListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        BorderBrush="{StaticResource AccentBG}"
                        BorderThickness="1"
                        Width="750"
                        Padding="10">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock 
                                Grid.Row="0" 
                                Grid.Column="0" 
                                Text="{Binding DisplayTypeName}"
                                Style="{StaticResource MainTextStyle}"
                                FontSize="16"
                                HorizontalAlignment="Left"/>
                            
                            <TextBlock 
                                Grid.Row="1" 
                                Grid.Column="0" 
                                Text="{Binding DisplayArticule}"
                                Style="{StaticResource MainTextStyle}"/>
                            
                            <TextBlock 
                                Grid.Row="2"
                                Grid.Column="0" 
                                Text="{Binding DisplayMinPrice}"
                                Style="{StaticResource MainTextStyle}"/>
                            
                            <TextBlock 
                                Grid.Row="3" 
                                Grid.Column="0" 
                                Text="{Binding DisplayWidth}"
                                Style="{StaticResource MainTextStyle}"/>

                            <TextBlock 
                                Grid.Column="1" 
                                Text="{Binding DisplayPrice}"
                                HorizontalAlignment="Center"
                                Style="{StaticResource MainTextStyle}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button
            Grid.Row="1"
            x:Name="AddButton"
            Content="Добавить"
            Width="200"
            Click="AddButton_Click"
            HorizontalAlignment="Right"
            Margin="10"/>
    </Grid>
</Page>
